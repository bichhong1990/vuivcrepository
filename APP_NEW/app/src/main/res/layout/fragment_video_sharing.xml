<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvVideoSharingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal|center_vertical"
        android:padding="10dp"
        android:textSize="18dp"
        android:text="Chia se voi"
        >
    </TextView>
    
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVideoSharingSocial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvVideoSharingTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >        
    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:id="@+id/viewVideoSharing"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="10dp"
        android:background="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewVideoSharingSocial"
        >
    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVideoSharingSystem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewVideoSharing"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </androidx.recyclerview.widget.RecyclerView>
    
    
</androidx.constraintlayout.widget.ConstraintLayout>