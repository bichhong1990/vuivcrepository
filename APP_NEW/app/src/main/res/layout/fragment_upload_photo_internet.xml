<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edtCaptionUploadPhotoInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter caption ..."
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/edtPhotoUrlInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Paste your image url ..."
        app:layout_constraintTop_toBottomOf="@+id/edtCaptionUploadPhotoInternet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </EditText>

    <Button
        android:id="@+id/btnPreviewPhotoInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtPhotoUrlInternet"
        app:layout_constraintLeft_toLeftOf="parent"
        >

    </Button>

    <ImageView
        android:id="@+id/imvPhotoUploadInternet"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="20dp"
        android:src="@drawable/vuivc_no_image_available"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/btnPreviewPhotoInternet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </ImageView>

    <Button
        android:id="@+id/btnPhotoUploadInternet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="Save"
        android:textStyle="bold"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_gravity="center|center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/imvPhotoUploadInternet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>