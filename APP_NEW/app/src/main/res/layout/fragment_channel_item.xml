<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/tvChannelTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="#cuocduakithu"
        >
    </TextView>

    <TextView
        android:id="@+id/tvChannelHashtag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Hashtag HOT"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvChannelTitle"
        app:layout_constraintRight_toRightOf="parent"
        ></TextView>

    <ImageView
        android:id="@+id/imvChannel"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@+id/tvChannelHashtag"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#000000"
        android:src="@drawable/icon_video_avatar"
        >

    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>