<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvPhotoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

   <ImageView
       android:id="@+id/imvPhoto"
       android:layout_width="match_parent"
       android:layout_height="640dp"
       android:layout_margin="30dp"
       app:layout_constraintDimensionRatio="1:1"
       app:layout_constraintVertical_bias="0.0"
       app:layout_constraintTop_toBottomOf="@+id/tvPhotoTitle"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       >
   </ImageView>

    <TextView
        android:id="@+id/tvSharePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        app:layout_constraintDimensionRatio="1:1"
        android:drawableTop="@drawable/icon_share"
        app:layout_constraintBottom_toBottomOf="@+id/imvPhoto"
        app:layout_constraintTop_toTopOf="@+id/imvPhoto"
        app:layout_constraintRight_toRightOf="@+id/imvPhoto"
        >
    </TextView>

    <TextView
        android:id="@+id/tvLikePhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        app:layout_constraintDimensionRatio="1:1"
        android:drawableTop="@drawable/icon_heart"
        app:layout_constraintLeft_toLeftOf="@+id/tvSharePhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvSharePhoto"
        app:layout_constraintRight_toRightOf="@+id/tvSharePhoto"
        >
    </TextView>

    <TextView
        android:id="@+id/tvCommentPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#FFFFFF"
        app:layout_constraintDimensionRatio="1:1"
        android:drawableTop="@drawable/icon_comment"
        app:layout_constraintLeft_toLeftOf="@+id/tvLikePhoto"
        app:layout_constraintTop_toBottomOf="@+id/tvLikePhoto"
        app:layout_constraintRight_toRightOf="@+id/tvLikePhoto"
        >
    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>